{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@models/*": ["../../models/*"],
      "@shared/*": ["../../libs/src/*"]
    }
  },
  "include": ["src/**/*", "scripts/**/*", "config/**/*", "services/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}