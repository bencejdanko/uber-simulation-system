{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../../",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "*"],
      "@models/*": ["../../models/*"],
      "@shared/*": ["../../libs/src/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}