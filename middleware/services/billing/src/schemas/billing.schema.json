{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "calculatePredictedFare": {
      "type": "object",
      "properties": {
        "pickupLatitude": {
          "type": "string",
          "pattern": "^-?\\d+(\\.\\d+)?$",
          "description": "Latitude of the pickup location as a string representing a number."
        },
        "pickupLongitude": {
          "type": "string",
          "pattern": "^-?\\d+(\\.\\d+)?$",
          "description": "Longitude of the pickup location as a string representing a number."
        },
        "dropoffLatitude": {
          "type": "string",
          "pattern": "^-?\\d+(\\.\\d+)?$",
          "description": "Latitude of the dropoff location as a string representing a number."
        },
        "dropoffLongitude": {
          "type": "string",
          "pattern": "^-?\\d+(\\.\\d+)?$",
          "description": "Longitude of the dropoff location as a string representing a number."
        },
        "requestTime": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 formatted date-time string for the request time."
        },
        "vehicleType": {
          "type": "string",
          "description": "Type of vehicle requested."
        }
      },
      "required": ["pickupLatitude", "pickupLongitude", "dropoffLatitude", "dropoffLongitude"],
      "additionalProperties": false
    },
    "calculateActualFare": {
      "type": "object",
      "properties": {
        "pickupLocation": {
          "type": "object",
          "properties": {
            "latitude": {
              "type": "number",
              "minimum": -90,
              "maximum": 90
            },
            "longitude": {
              "type": "number",
              "minimum": -180,
              "maximum": 180
            }
          },
          "required": ["latitude", "longitude"]
        },
        "dropoffLocation": {
          "type": "object",
          "properties": {
            "latitude": {
              "type": "number",
              "minimum": -90,
              "maximum": 90
            },
            "longitude": {
              "type": "number",
              "minimum": -180,
              "maximum": 180
            }
          },
          "required": ["latitude", "longitude"]
        },
        "pickupTimestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 formatted date-time string for the pickup time."
        },
        "dropoffTimestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 formatted date-time string for the dropoff time."
        },
        "distance": {
          "type": "number",
          "minimum": 0,
          "description": "Distance traveled in miles."
        }
      },
      "required": ["pickupLocation", "dropoffLocation", "pickupTimestamp", "dropoffTimestamp"],
      "additionalProperties": false
    }
  }
}
